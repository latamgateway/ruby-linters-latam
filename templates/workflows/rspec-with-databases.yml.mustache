{{=<% %>=}}
name: RSpec

on:
  workflow_call:
    inputs:
      package_dependencies:
        required: false
        type: string
        default: ""
<%# include_external_databases? %>

<%# external_databases %>
      repository<% suffix %>:
        required: true
        type: string
      ref<% suffix %>:
        required: true
        type: string

<%/ external_databases %>
    secrets:
      access-token:
        required: true
        description: |
          Personal access token used to access private repositories.
<%/ include_external_databases? %>

jobs:
  rspec:
    runs-on: ubuntu-latest

<%# include_services? %>
    services:
<%# include_postgres_service? %>
      postgres:
        image: postgres:11
        ports: ["5432:5432"]
        env:
          POSTGRES_HOST_AUTH_METHOD: trust
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
<%/ include_postgres_service? %>

<%# include_redis_service? %>
      redis:
        image: redis
        ports: ["6379:6379"]
        options: >-
          --health-cmd "redis-cli ping"
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
<%/ include_redis_service? %>

<%/ include_services? %>
    steps:
      - name: "Install Package Dependencies"
        if: ${{ inputs.package_dependencies != '' }}
        run: sudo apt-get update && sudo apt-get install --yes --quiet ${{ inputs.package_dependencies }}

<%# external_databases %>
      <%> steps/setup-database.yml %>

<%/ external_databases %>
      <%> steps/rspec.yml %>
